{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      //assets paths
      "@assets/*": ["./src/assets/*"],
      "@assets": ["./src/assets/index.ts"],

      //domains paths
      "@domains/*": ["./src/domains/*"],

      //common paths
      "@ctypes/*": ["./src/domains/common/types/*"],
      "@contexts": ["./src/domains/common/contexts/index.ts"],
      "@hooks": ["./src/domains/common/hooks/index.ts"],
      "@hocs": ["./src/domains/common/hocs/index.ts"],
      "@services": ["./src/domains/common/services/index.ts"],
      "@helpers/*": ["./src/domains/common/helpers/*"],
      "@enums": ["./src/domains/common/enums/index.ts"],
      "@constants": ["./src/domains/common/constants/index.ts"],

      //app paths
      "@layout": ["./src/layout/index.ts"],
      "@ui/*": ["./src/ui/*"],
      "@config": ["./src/config/index.ts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
