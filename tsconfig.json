{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "src/",
    "paths": {
      "@/*": ["app/*"],
      "@styles/*": ["assets/styles/*"],
      "@assets": ["assets/index.ts"],
      "@layout": ["layout/index.ts"],
      "@ui": ["ui/index.ts"],
      "@data": ["data/index.ts"],
      "@config": ["config/index.ts"],
      "@domains/*": ["domains/*"],
      "@ctypes/*": ["domains/common/types/*"],
      "@contexts": ["domains/common/contexts/index.ts"],
      "@hooks": ["domains/common/hooks/index.ts"],
      "@hocs": ["domains/common/hocs/index.ts"],
      "@services": ["domains/common/services/index.ts"],
      "@helpers/*": ["domains/common/helpers/*"],
      "@enums": ["domains/common/enums/index.ts"],
      "@constants": ["domains/common/constants/index.ts"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
