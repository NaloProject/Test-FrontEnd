{
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "rules": {
    "no-restricted-imports": "off",
    "@typescript-eslint/no-restricted-imports": [
      "error",
      { "patterns": ["@domains/*/*", "@ui/*/*"] }
    ],
    "@typescript-eslint/ban-ts-comment": [
      "error",
      { "ts-ignore": "allow-with-description" }
    ],
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-empty": "warn"
  }
}
